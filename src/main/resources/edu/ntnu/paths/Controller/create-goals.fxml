<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import com.sun.javafx.scene.control.IntegerField?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.ntnu.paths.Controller.CreateGoals"
            stylesheets="@Style/style.css, @Style/create-goals.css">

    <top>
        <VBox>
            <StackPane>
                <Label text="Create goals" style="-fx-font-size: 36pt; -fx-text-fill: black;"/>
            </StackPane>
            <StackPane>
                <Label text="In this game you can choose your own goals!"/>
            </StackPane>
            <HBox fx:id="createGoalsContainer">
                <VBox>
                    <ComboBox promptText="View goals" fx:id="dropdown">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Gold" />
                                <String fx:value="Health" />
                                <String fx:value="Inventory" />
                                <String fx:value="Score" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <VBox >
                            <StackPane fx:id="labelGoal"></StackPane>
                        <StackPane fx:id="inputGoal"></StackPane>
                        <StackPane fx:id="setGoalButton"></StackPane>
                    </VBox>
                </VBox>
                <Label fx:id="contentLabel" />
                <VBox>
                    <Label text="Your selected goals" />
                    <VBox fx:id="goalsContainer" />
                </VBox>
            </HBox>
        </VBox>
    </top>

    <bottom>
        <AnchorPane>
            <Button text="Import story" disable="true" onAction="#beginGame" prefWidth="120" prefHeight="40"
                    AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="50"/>
            <Button text="Go Back" onAction="#goBack" prefWidth="120" prefHeight="40"
                    AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="50"/>
        </AnchorPane>
    </bottom>

</BorderPane>



