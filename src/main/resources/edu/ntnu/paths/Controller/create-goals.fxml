<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.ntnu.paths.Controller.CreateGoals"
            stylesheets="@Style/style.css">

    <top>
        <StackPane>
            <Label text="Create goals" style="-fx-font-size: 36pt; -fx-text-fill: black;"/>
        </StackPane>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 10px;">
            <ComboBox  fx:id="dropdown" promptText="View goals">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Gold" />
                        <String fx:value="Health" />
                        <String fx:value="Inventory" />
                        <String fx:value="Score" />
                    </FXCollections>
                </items>
            </ComboBox>

            <AnchorPane>

                <Label fx:id="contentLabel" text="In this game you can choose you own goals!" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="100" />
                <VBox prefWidth="200" prefHeight="100" style="-fx-background-color: lightgray;" AnchorPane.topAnchor="50" AnchorPane.rightAnchor="100">
                    <Label text="Additional information" style="-fx-font-size: 14pt; -fx-text-fill: black;"/>
                    <Label text="Here you can add any additional information related to the selected goal option." style="-fx-font-size: 12pt; -fx-text-fill: black;"/>
                </VBox>
            </AnchorPane>
        </VBox>
    </center>

    <bottom>
        <AnchorPane>
            <Button text="Import story" disable="true" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="50" onAction="#importStory" prefWidth="120" prefHeight="40"/>
            <Button text="Go Back" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="50" onAction="#goBack" prefWidth="120" prefHeight="40"/>
        </AnchorPane>
    </bottom>

</BorderPane>

