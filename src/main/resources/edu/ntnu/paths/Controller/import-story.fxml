<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.ntnu.paths.Controller.ImportedStory"
            stylesheets="@Style/style.css">

    <top>
        <StackPane>
            <Label text="Import story from file" style="-fx-font-size: 36pt; -fx-text-fill: black;"/>
            <Label text="Here you can add a story file" style="-fx-font-size: 18pt; -fx-text-fill: black;-fx-padding: 100 0 0 0;"/>
        </StackPane>
    </top>

    <center>
        <VBox alignment="CENTER">
            <Button text="Choose File" onAction="#onSelectFileButtonClick"/>
            <Label fx:id="filePathLabel"/>
        </VBox>
    </center>

    <bottom>
        <AnchorPane>
            <Button text="Begin story" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="50" onAction="#BeginStory" prefWidth="120" prefHeight="40"/>
            <Button text="Go Back" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="50" onAction="#goBack" prefWidth="120" prefHeight="40"/>
        </AnchorPane>
    </bottom>

</BorderPane>




